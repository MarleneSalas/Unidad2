<UserControl x:Class="Unidad2.Views.SuperHeroeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Unidad2.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <WrapPanel Width="250">
                <Image Margin="5" Height="80" Source="{Binding Fotografia}"></Image>
        <StackPanel>
            <TextBlock VerticalAlignment="Center" Text="{Binding Aka}"></TextBlock>
            <TextBlock VerticalAlignment="Center" Text="{Binding Nombre}"></TextBlock>
        </StackPanel>
    </WrapPanel>
</UserControl>
